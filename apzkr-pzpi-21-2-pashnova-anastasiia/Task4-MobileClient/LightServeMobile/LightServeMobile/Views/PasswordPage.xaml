<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LightServeMobile.Views.PasswordPage">

    <StackLayout Padding="20">
        <Entry x:Name="OldPassoword" Placeholder="Старий пароль" />
        <Entry x:Name="NewPasswordEntry" Placeholder="Новий пароль" IsPassword="True" />

        <Button Text="Назад" Clicked="OnBackClicked" BackgroundColor="LightGray" Margin="0,0,0,15"/>
        <Button Text="Змінити" Clicked="OnChangeClicked" />
    </StackLayout>

</ContentPage>
