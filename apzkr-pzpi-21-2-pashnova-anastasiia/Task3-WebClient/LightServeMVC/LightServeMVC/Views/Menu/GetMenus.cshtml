@model List<LightServeMVC.Models.Menu>

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

@Html.ActionLink("Add Menu", "Add", "Menu", null, new { @class = "btn btn-primary" })

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                @Html.ActionLink("Info", "Index", "Menu", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Menu", new { id = item.Id}, new { @class = "btn btn-danger" })

            </td>
        </tr>
    }
</table>
